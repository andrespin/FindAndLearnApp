<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_with_buttons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_weight="16">

        <ImageView
            android:id="@+id/btnAddToList"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="35dp"
            android:layout_weight="1.2"
            android:background="@drawable/ic_file_add_to_list"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/btnDeleteChecked"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginEnd="55dp"
            android:layout_weight="1.3"
            android:background="@drawable/ic_delete"
            android:backgroundTint="@color/semi_red"
            android:textColor="@color/black"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnCancelChecked"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/btnCancelChecked"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginEnd="35dp"
            android:layout_weight="1.3"
            android:background="@drawable/ic_cancel"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ImageView>

    </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_list_of_added_words"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:clipToPadding="false" />

</LinearLayout>



