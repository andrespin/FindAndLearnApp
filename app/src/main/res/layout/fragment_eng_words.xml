<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnMyList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:layout_marginRight="10sp"
            android:visibility="visible"
            android:text="Мой список"
            android:textSize="16sp"
            android:background="@drawable/oval"
            android:textColor="@color/black"
            />

        <Button
            android:id="@+id/btnAddToList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:layout_marginRight="10sp"
            android:visibility="gone"
            android:text="Добавить в список"
            android:textSize="16sp"
            android:background="@drawable/oval"
            android:textColor="@color/black"
            />

        <Button
            android:id="@+id/btnDeleteChecked"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:layout_marginLeft="10sp"
            android:visibility="visible"
            android:backgroundTint="@color/semi_red"
            android:text="Удалить"
            android:textSize="13.2sp"
            android:textColor="@color/black"
            />

        <Button
            android:id="@+id/btnCancelChecked"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:visibility="visible"
            android:backgroundTint="@color/semi_green"
            android:layout_marginLeft="10sp"
            android:text="Отмена"
            android:textSize="13.2sp"
            android:textColor="@color/black">
        </Button>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.08">

        <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_list_of_added_words"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false" />




    </androidx.constraintlayout.widget.ConstraintLayout>





</LinearLayout>


