<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".words_test.SelectTestFragment">


    <TextView
        android:id="@+id/txtAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="100dp"
        android:text="Все слова и \n части речи"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtSetTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="270dp"
        android:text="Все слова и \n части речи"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgTestInfo"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="97dp"
        android:src="@drawable/ic_click_to_get_info"
        app:layout_constraintStart_toEndOf="@+id/txtAll"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgSetTestInfo"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="267dp"
        android:src="@drawable/ic_click_to_get_info"
        app:layout_constraintStart_toEndOf="@+id/txtSetTest"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>