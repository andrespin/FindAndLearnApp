<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/bottom_nav"
    android:id="@+id/main">

    <fragment
        android:id="@+id/bottom_nav"
        android:name="android.findandlearnapp.BottomNavFragment"
        android:label="Bottom Nav"
        tools:layout="@layout/fragment_bottom_nav">
        <action
            android:id="@+id/action_bottom_nav_to_settings"
            app:destination="@id/settings" />
        <action
            android:id="@+id/action_bottom_nav_to_aboutApp"
            app:destination="@id/aboutApp" />
        <action
            android:id="@+id/action_bottom_nav_to_myWordLists"
            app:destination="@id/myWordLists" />
    </fragment>

    <fragment
        android:id="@+id/settings"
        android:name="android.findandlearnapp.words_app_settings.SettingsFragment"
        android:label="MoviesFragment"
        tools:layout="@layout/fragment_settings">
        <action
            android:id="@+id/action_settings_to_bottom_nav"
            app:destination="@id/bottom_nav" />
    </fragment>


    <fragment
        android:id="@+id/aboutApp"
        android:name="android.findandlearnapp.words_app_settings.AboutAppFragment"
        android:label="MoviesFragment"
        tools:layout="@layout/fragment_about_app">
        <action
            android:id="@+id/action_aboutApp_to_bottom_nav"
            app:destination="@id/bottom_nav" />
    </fragment>

    <fragment
        android:id="@+id/myWordLists"
        android:name="android.findandlearnapp.words_manager.mylists.MyListsFragment"
        android:label="MyListsFragment"
        tools:layout="@layout/fragment_my_lists">
        <action
            android:id="@+id/action_myWordLists_to_myWordsInList"
            app:destination="@id/myWordsInList" />
    </fragment>

    <fragment
        android:id="@+id/myWordsInList"
        android:name="android.findandlearnapp.words_manager.words_in_list.WordsFragment"
        android:label="WordsFragment"
        tools:layout="@layout/fragment_words">

        <action
            android:id="@+id/action_myWordsInList_to_word"
            app:destination="@id/word" />
    </fragment>

    <fragment
        android:id="@+id/word"
        android:name="android.findandlearnapp.words_manager.WordFragment"
        android:label="WordsFragment"
        tools:layout="@layout/fragment_word">
    </fragment>

</navigation>